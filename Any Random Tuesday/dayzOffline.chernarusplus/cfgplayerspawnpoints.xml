			<pos x="6032" z="7814" />
			<pos x="6021" z="7836" />
			<pos x="6001" z="7864" />
			<pos x="5978" z="7887" />
			<pos x="5963" z="7918" />
			<pos x="6149" z="7711" />
			<pos x="6175" z="7693" />
			<pos x="6200" z="7676" />
		</generator_posbubbles>
    </fresh>

